<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <title>{% block title %}Vespolina - An OpenSource, decoupled Ecommerce framework{% endblock %}</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="">
    <meta name="author" content="">

    <!-- Le styles -->
    <link href="{{ asset('bundles/vespolinasite/css/bootstrap/bootstrap.min.css') }}" rel="stylesheet">
    <link href="{{ asset('bundles/vespolinasite/css/bootstrap/bootstrap-responsive.min.css') }}" rel="stylesheet">
    <link href="{{ asset('bundles/vespolinasite/css/app.css') }}" rel="stylesheet">

    <!-- HTML5 shim, for IE6-8 support of HTML5 elements -->
    <!--[if lt IE 9]>
    <script src="{{ asset('js/html5shiv.js') }}"></script>
    <![endif]-->

    <!-- Fav and touch icons -->
    <!--
    <link rel="apple-touch-icon-precomposed" sizes="144x144" href="../assets/ico/apple-touch-icon-144-precomposed.png">
    <link rel="apple-touch-icon-precomposed" sizes="114x114" href="../assets/ico/apple-touch-icon-114-precomposed.png">
    <link rel="apple-touch-icon-precomposed" sizes="72x72" href="../assets/ico/apple-touch-icon-72-precomposed.png">
    <link rel="apple-touch-icon-precomposed" href="../assets/ico/apple-touch-icon-57-precomposed.png">
    <link rel="shortcut icon" href="../assets/ico/favicon.png">
    -->
</head>

<body>

    <section role="heading">
        <div class="container">
            <a href="/">
                <img src="{{ asset('bundles/vespolinasite/img/logo.png') }}" title="{{ 'Homepage'|trans }}" />
            </a>
            <nav class="pull-right">
                {{ knp_menu_render('main') }}
            </nav>
        </div>
    </section>

    <section role="intro">
        <div class="container">

            <div class="text">
                <h1>Titel</h1>
                <p>Aliquam et nisl vel ligula consectetuer suscipit. Morbi euismod enim eget neque.</p>
            </div>
            <img src="#" />
        </div>
    </section>

    <section role="usp">

        <div class="container">

            <ul>

                {% for i in 0..3 %}
                <li class="item">
                    <figure>
                        <img src="#" width="100" height="100" />
                    </figure>
                    <div class="inner">
                        <h3>USP Title</h3>
                        <p>Cras rutrum pulvinar tellus</p>
                    </div>
                </li>
                {% endfor %}

            </ul>

        </div>

    </section>

    <div class="container">
        <div class="switcher pull-right">
            {{ locale_switcher() }}
        </div>
        <div class="masthead">
            <h3 class="muted">Vespolina Ecommerce</h3>
            <div class="navbar">
                <div class="navbar-inner">
                    <div class="container">
                        {{ knp_menu_render('main') }}
                        {#
                        <ul class="nav">
                            <li class="active"><a href="#">Home</a></li>
                            <li><a href="#">Projects</a></li>
                            <li><a href="#">Services</a></li>
                            <li><a href="#">Downloads</a></li>
                            <li><a href="#">About</a></li>
                            <li><a href="#">Contact</a></li>
                        </ul>
                        #}
                    </div>
                </div>
            </div><!-- /.navbar -->
        </div>

        {% block content %}No content defined{% endblock %}

        <div class="footer">
            <p>&copy; Company 2013</p>
        </div>

    </div> <!-- /container -->


    <script src="{{ asset('bundles/vespolinasite/js/bootstrap/jquery.js') }}"></script>
    <script src="{{ asset('bundles/vespolinasite/js/bootstrap/bootstrap.min.js') }}"></script>
</body>
</html>